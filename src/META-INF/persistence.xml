<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="persistenceUnit">
		<class>org.proyectoBiblioteca.domain.Usuario</class>
		<class>org.proyectoBiblioteca.domain.Autor</class>
		<class>org.proyectoBiblioteca.domain.Direccion</class>
		<class>org.proyectoBiblioteca.domain.Editorial</class>
		<class>org.proyectoBiblioteca.domain.Ejemplar</class>
		<class>org.proyectoBiblioteca.domain.Libro</class>
		<class>org.proyectoBiblioteca.domain.Localidad</class>
		<class>org.proyectoBiblioteca.domain.Provincia</class>
		<class>org.proyectoBiblioteca.domain.Socio</class>
		<class>org.proyectoBiblioteca.domain.DiaNoHabil</class>
		<class>org.proyectoBiblioteca.domain.Prestamo</class>
		<class>org.proyectoBiblioteca.domain.Suspension</class>
	
		 <properties>
	        <property name="javax.persistence.jdbc.user" value="root"/>
	        <property name="javax.persistence.jdbc.password" value="root"/>
	        <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
	        <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/biblioteca"/>
	        <property name="javax.persistence.logging.level" value="INFO"/>
	      </properties>
		
	</persistence-unit>
</persistence>
